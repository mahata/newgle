    <% if (SearchResponse.Web.Results[i].CacheUrl) { %>
    - <a href="<%= SearchResponse.Web.Results[i].CacheUrl %>" class="search-result-cache">キャッシュ</a>
    <% } %>

    <% if (SearchResponse.Web.Results[i].DeepLinks) { %>
      <div class="search-result-deep-link"><strong>もっと見る:</strong>
      <% for (var j = 0; j < SearchResponse.Web.Results[i].DeepLinks.length; j++) { %>
        - <a href="<%= SearchResponse.Web.Results[i].DeepLinks[j].Url %>"><%= escape_tag(SearchResponse.Web.Results[i].DeepLinks[j].Title) %></a>
      <% } %>
      </div>
    <% } %>

    <p style="clear: both;"></p>

    </div>
    </div>

    </li>
  <% } %>
<% } %>
